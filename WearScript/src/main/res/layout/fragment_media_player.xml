<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/relative"
    android:layout_height="match_parent">
<SurfaceView
    android:id="@+id/media_surface"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="gone" />



    <SeekBar android:id="@+id/seekBar1" android:max="100" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/media_surface"
        android:indeterminate="false"></SeekBar>
</RelativeLayout>